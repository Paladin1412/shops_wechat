.container
  display flex
  flex-wrap wrap
  background #F7F7F7
  padding-bottom 120px
.list
  width 351px
  margin 0 0 16px 16px
  background rgba(255, 255, 255, 1)
  border-radius 6px
.product_image
  padding-top 100%
  background-repeat no-repeat
  background-size cover
  border-radius: 12px 12px 0 0
.product_title
  height 76px
  font-size 26px
  color rgba(102, 102, 102, 1)
  line-height 38px
  display -webkit-box
  overflow hidden
  text-overflow ellipsis
  -webkit-line-clamp 2
  -webkit-box-orient vertical
  margin 16px 46px 11px 20px
.price_box
  display flex
  align-items flex-end
  font-weight bold
  color rgba(249, 72, 46, 1)
  margin 0 0 23px 20px
.symbol
  font-size 28px
  width 21px
  text-align left
.small_price
  font-size 40px
  line-height 47px
.big_price
  color rgba(179, 179, 179, 1)
  font-size 24px
  margin-left 16px
.tag
  height 28px
  background rgba(249, 72, 46, 0.1)
  border-radius 2px
  text-align center
  line-height 28px
  font-size 20px
  color rgba(249, 72, 46, 1)
  margin 0 0 20px 20px
  padding 0 8px
  display inline-block