.qrModal
  position: fixed 
  z-index: 1000
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0, 0, 0, 0.7)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  opacity 0
  visibility: hidden;
  transition: opacity 0.3s ease-in-out;
  .imgClose
    width: 80px
    height: 80px
    margin-bottom: 64px
    display: block
    background-image: none
  .canvasImg
    width: 540px
    height: 796px
    background-image: url("data:image/gif;base64,")
    background-size: 36px 36px
    background-repeat: no-repeat
    background-position: center center
  .canvasLive
    height: 870px
  .operation
    margin-top: 40px
    :global
      button
        background-color: transparent
        border: 1Px solid #fff
    .shareBtn
      width: 540px
      height: 88px
      display: flex
      justify-content: center
      align-items: center
      border-radius: 44px
    .wxBtn
      border: 1Px solid #fff
      background-color: transparent
    .downloadBtn
      margin-top: 24px
      background-color: #F9482E
    .wxicon
      width: 38px
      height: 30px
      background-image: none
    .loadicon
      width: 30px
      height: 30px
      background-image: none
    .btnLabel
      margin-left: 16px
      font-size: 32px
      color: #ffffff
      font-weight: 500
