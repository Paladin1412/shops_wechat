.mask_box
  position fixed
  background rgba(0, 0, 0, 0.45)
  left 0
  top 0
  width 100%
  height 100%
  z-index 10
  text-align center
.content
  background rgba(255, 255, 255, 1)
  border-radius 12px
  width 540px
  margin 280px auto 0
.title
  font-size 32px
  color rgba(51, 51, 51, 1)
  line-height 48px
  position relative
  padding 48px 0 16px
.contact
  position: relative
  font-size 28px
  color rgba(102, 102, 102, 1)
  line-height 40px
  padding-bottom: 48px
  &::after
    content ''
    display block
    position absolute
    left 0
    width 100%
    bottom 0
    height 1PX
    background-image linear-gradient(0deg, #F5F5F5 50%, transparent 100%)
.close
  font-size: 32px
  color: rgba(249, 72, 46, 1)
  line-height: 48px
  padding: 24px 0