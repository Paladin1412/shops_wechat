:global
  .taro_page
    background linear-gradient(180deg, rgba(242, 237, 237, 1) 0%, rgba(251, 251, 249, 1) 100%)
    min-height: 100%
  .close_icon
    font-size: 16px
.content
  padding: 24px 32px
  // padding-bottom: 138px
  :global
    .at-float-layout__container
      border-top-left-radius: 18px
      border-top-right-radius: 18px
      min-height: 484px
    .layout-body
      padding: 0
    .at-modal__content
      text-align: center
      display: flex
      align-items: center
    .content-simple
      line-height: 40px
      text-align: left 
      padding: 0 25px
    .at-modal__footer--simple .at-modal__action > button:last-child:nth-child(2)
      color: #F9482E
    .at-modal__header
      padding: 30px 24px
 .header
  display: flex
  flex-direction: column
  align-items: center
  background-color: #ffffff
  border-radius: 12px
  padding: 40px 0
  margin-bottom: 24px
  .header_title
    line-height: 44px
    display: flex
    font-size: 34px
    font-weight: 600
    color: #F9482E
    margin-bottom: 15px
    .header_icon
      margin-right: 12px
  .header_content
    max-width: 72.8%
    line-height: 36px
    margin-top: 12px
    text-align: center
    color: #C8C8C8
    font-size: 28px
.body
  position: fixed
  width: calc(100% - 24px)
  height calc(100% - 205px)
  top: 32px
  left 24px
  z-index: 11
  .scroll_content
    margin-right: 24px
.info_box
  margin-bottom: 24px
  background-color: #fff
  border-radius: 12px
.progress_bar 
  display: flex
  align-items: center
  justify-content: space-between
  padding: 32px 48px 38px 
  .state_item
    display: flex
    align-items: center
    position relative
    .state_next
      position: absolute
      right: -35px
  .state_item_large
    flex: 1
    justify-content: center
    flex-shrink: 0
    .state_next
      position: absolute
      right: -20px
  .state_info
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    .state_num 
      width: 40px
      height: 40px
      display: flex
      justify-content: center
      align-items: center
      border-radius: 50%
      background-color: #b3b3b3
      color: #ffffff
      font-size: 28px
      font-weight: 600
    .finish_num 
      background-color: #f9482e
    .state_text
      line-height: 40px
      margin-top: 12px
      font-size: 28px
      color: #b3b3b3
    .finish_text
      color: #333
  .next
    margin-left: 18px
.refund_item,
.return_item
  line-height: 33px
  display: flex
  margin: 0 24px
  padding: 32px 0
  
  color: #333
  font-size: 24px
  .return_title,
  .refund_title
    flex: 0 0 144px
  .refund_remarks
  .return_remarks
    flex: 1 1 auto
    padding-right: 30px
.return_item+ .return_item, .refund_item+.refund_item
  border-top: 1px solid #f2f2f2
.refund_proof
  padding: 32px 24px
  border-top: 1px solid #f2f2f2
  .title
    line-height: 33px
    margin-bottom: 28px
    color: #333
    font-size: 24px
  .proof_img
    display: flex
    flex-wrap: wrap
    .img 
      width: 178px
      height: 178px
      border-radius: 8px
      margin: 0 8px 8px 0
.noborder_bottom
  border-bottom: none
.return
  font-size: 28px
  color: #333
  padding: 28px 0
  margin: 0 24px
  font-weight: 500
  border-bottom: 1px solid #f2f2f2
.button_box
  position: fixed
  right: 0
  bottom: 0
  left: 0
  z-index: 99
  background: #fff
  padding: 32px 24px
  display: flex
  justify-content: flex-end
  .button
    width: 240px
    height: 68px
    display: flex
    justify-content: center
    align-items: center
    border-radius: 34px
    background-color: #f9482e
    font-size: 28px
    color: #fff
.popup_header
  width: 100%
  height: 89px
  position: relative
  display: flex
  justify-content: center
  align-items: center
  border-bottom: 1px solid #e6e6e6
  .close
    position: absolute
    right: 0
    top: 50%
    padding: 12px 24px
    transform: translateY(-50%)
.popup_body
  margin-top: 20px
  .xrequired:before
    content: '* '
    color: red
  .xrequired
    flex: 0 0 165px
  .item
    display: flex
    align-items: center
    margin: 0 24px
    padding: 28px 0
    border-bottom: 1px solid #f2f2f2
    color: #333
    font-size: 24px
  .input::placeholder
    color: #c9c9c9
    line-height: 1
  .input
    flex: 1 1 auto
    line-height: 1
.popup_button
  margin-top: 48px
  display: flex
  justify-content: center
  .btn
    width: 77.8%
    height: 68px
    // position: absolute
    bottom: 78px
    display: flex
    justify-content: center
    align-items: center
    border-radius: 34px
    background-color: #f9482e
    font-size: 28px
    color: #fff
  .gray_btn
    background: #dfdfdf


.red
