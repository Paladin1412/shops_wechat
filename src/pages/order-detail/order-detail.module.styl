.top_box
  position: fixed
  width: 100%
  left: 0
  top: 0
  z-index 999
  color: #ffffff
  .top_inner
    position: relative
    width: 100%
    text-align: center
    display: flex
    align-items: center
    justify-content: center
    margin-bottom: 20px
    .font 
      font-size: 30px 
      font-weight: bold
