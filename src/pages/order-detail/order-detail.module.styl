 .container
  :global
    .at-modal__content
      text-align: center
    .content-simple
      line-height: 120px
  ::-webkit-scrollbar
    width: 0;
    height: 0;
    color: transparent;
 .addres_box
   color: #676767
   font-size: 28px
   text-align: center
   padding: 36px 0
   line-height: 28px
   background: #ffffff
   border-radius: 12px; 
   .icon
    display: inline-block
    width: 60px
    height 60px
    line-height: 60px
    text-align: center
    font-size: 30px
    color: #888888

.transfee_box
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 24px
  line-height: 24px 
  .label
    line-height: 40px
    font-size: 28px
  .red
    margin-left: 10px
    font-size: 28px
    font-weight: 500
.order_info
  display: flex
  align-items: center
  font-size: 28px
  line-height: 28px
.order_info+.order_info
  margin-top: 32px

.product_box
  padding: 32px 24px
  background:rgba(255,255,255,1);
  border-radius:12px;
  margin-bottom: 24px
  .title
    font-size: 28px 
    line-height: 40px
    display: flex
    align-items: center
    position: relative
    .icon_shop
      font-size: 28px
      color: rgba(50, 50, 50, 1)
    .font
      margin-left: 16px
      color: rgba(50, 50, 50, 1)
      max-width: 420px
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
    .status_box
      position: absolute
      right: 0
      top: 0
      font-size: 28px
      color: #656565
      display: flex
      align-items: center
      line-height: 40px
    .red
      color: #F9482E
      font-weight: bold
    :global
      .turnright
        margin-left: 10px
  .info_box
    display: flex
    position: relative
    margin-top: 24px
    .img
      width: 178px
      height 178px
      display: block
      margin-bottom: 0
      flex-shrink: 0
      border-radius:6px;
    .info_right
      margin-left: 24px
      flex: 1
      .item_line_container
        min-height: 52px
      .item_line
        display: flex
        align-items: center
        justify-content: space-between
        font-size: 24px
        line-height: 24px
        padding-top: 16px
        .info_title
          width: 290px
          display: block
          color: rgba(51, 51, 51, 1)
        .num
          color: rgba(102, 102, 102, 1) 
        .recv
          background: #FEECEA
          color: #F9482E
          padding: 6px 10px
          display: inline-block
          margin-top: 8px
          line-height: 1
      .second
        color: rgba(201, 201, 201, 1)
      .all_price
        text-align: right
        display: flex
        align-items: center
        justify-content: flex-end
        font-size: 24px
        color: rgba(101, 101, 101, 1)
        line-height: 28px
        .all_num
          font-weight: bold
          font-size: 28px
          line-height: 28px
.clock_box
  display: flex
  align-items: center
  letter-spacing: -1px
  :global
    .iconfont
      font-size: 35px
      margin-right: 10px
    .taro-text
      background: transparent
      color: #fff
      font-size: 30px
      padding: 0 1px
    .taro-text:nth-child(1), .taro-text:nth-child(2), .taro-text:nth-child(3), .taro-text:nth-child(4),.taro-text:nth-child(5),
    label 
      display: none
    .taro-text:nth-child(8)
      position: relative
      margin-right: 10px
      &:after
        position: absolute
        content: ':'
        left: 20px
        top: -2px






