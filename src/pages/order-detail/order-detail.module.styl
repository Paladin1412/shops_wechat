.item
  display: flex
  align-items: center
  margin: 0 28px
  font-size: 28px
  line-height: 28px
  background: #ffffff
  .left
    width: calc(100% - 40px)
    padding-right: 40px
    color: #333333
    .gray
      color: #333333
      margin-top: 18px
      display: block 
      line-height: 40px
      font-size: 24px
      text-align: left
    .name_box
      display: flex
      align-items: center
      font-weight: bold
      .name
        display: inline-block
        text-align: left
      .tel
        margin-left: 20px
        display: flex
        align-items: center
