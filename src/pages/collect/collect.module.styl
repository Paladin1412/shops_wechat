body
  background rgba(247, 247, 247, 1)
  :global
    .loaded, .loaded
      font-size 24px
.list
  background rgba(255, 255, 255, 1)
  border-radius 18px
  padding 28px 24px
  margin 16px 0 0 0
  position relative
.store_desc
  display flex
  line-height 40px
  align-items center
.store_icon
  line-height 40px
  margin-right 12px
  font-size 24px
  color #343434
.arrow_icon
  margin-left 20px
  font-size 16px
.product_desc
  display flex
  margin 28px 0 0 0
  height 178px
.product_img
  width 178px
  height 178px
  border-radius 6px
  margin 0 18px 0 0
  background-size 100%
  position relative
.product_info
  width calc(100% - 196px)
.product_title
  height 80px
  font-size 28px
  line-height 40px
  display -webkit-box
  overflow hidden
  -webkit-box-orient vertical
  -webkit-line-clamp 2
.product_price
  font-size 28px
  font-weight 600
  line-height 40px
.product_profit
  height 28px
  background rgba(249, 72, 46, 0.1)
  border-radius 2px
  font-size 20px
  font-weight 500
  color rgba(249, 72, 46, 1)
  line-height 28px
  padding 0 8px
  margin 0 0 0 12px
.product_price_box
  display flex
  margin 20px 0 0 0
  align-items center
.product_buy
  height 44px
  background rgba(249, 72, 46, 1)
  border-radius 24px
  width 115px
  position absolute
  right 24px
  bottom 24px
  font-size 24px
  color rgba(255, 255, 255, 1)
  text-align center
  display flex
  align-items center
  justify-content center
.gray
  color #CACACA
.black
  color #323232
.product_clear
  width 115px
  height 44px
  border-radius 24px
  border 1px solid rgba(201, 201, 201, 1)
  position absolute
  right 24px
  bottom 24px
  font-size 24px
  text-align center
  display flex
  align-items center
  justify-content center
  color rgba(201, 201, 201, 1)
.product_profit_gray
  height 28px
  border-radius 2px
  font-size 20px
  font-weight 500
  line-height 28px
  padding 0 8px
  margin 0 0 0 12px
.mask
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background-size 88px 88px
  background-repeat no-repeat
  background-position center
.empty
  padding 100px 0 0 0
.empty_box
  margin 100px 0 0 0
.nologinContainer
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  background rgba(255, 255, 255, 0.8)
  position fixed
  left 0
  text-align center
  .nologinInner
    width: 100%