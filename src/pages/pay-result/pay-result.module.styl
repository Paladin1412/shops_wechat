 .content
  width: 100%
  overflow: hidden
  background: #F7F7F7
 .pay_success
   background: #ffffff
   padding: 88px
   text-align: center
   .icont_box
    :global
      .iconfont
        font-size: 130px
        color: #F9482E
        line-height: 130px
  .status
    font-size: 28px
    line-height: 28px
    margin-top: 40px
  .gray
    font-size: 24px
    line-height: 24px
    color: #656565
    margin-top: 26px
  .button_box
    display: flex
    align-items: center
    justify-content: center
    margin-top: 48px
    .button
      font-size: 28px
      line-height: 28px
      color: #F9482E
      background: #FEECEA
      padding: 18px 36px
      border-radius: 34px
    .button+.button
      margin-left: 30px
    .right_button  
      color: #fff
      background: #F9482E

.ret_icon
  width:160px
  height:160px

.pay_false
  .icont_box
    :global
      .iconfont
        font-size: 130px
        color: #E0E0E0
        line-height: 130px
  // .right_button  
  //   flex: 1


.tj_out
  text-align: center
  :global
    .at-divider
      height:112px
    .at-divider__content
      background: transparent
.tuijian_box
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  position: relative
  // left: -10px
  .item
    width: 351px
    margin-left: 20px
    background: #ffffff
    border-radius:6px;
    margin-bottom: 16px
    font-size: 26px
    line-height: 26px
    text-align: left 
    .img
      width: 100%
      flex-shrink: 0
      height auto
      border-radius:12px 12px 0 0;
      margin-bottom: 0
      display: block
      height: 360px
    .bottom
      padding: 16px 20px
      .title
        font-size: 26px
        color: #666
        line-height: 35px
      .price_box
        margin-top: 25px
        color: #F9482E
        font-size: 24px
        .num
          font-size: 40px
        .small_num
          color: #B3B3B3
          margin-left: 10px
          text-decoration: line-through
      .tag
        font-size: 20px
        line-height: 20px
        color: #F9482E
        background: #FEECEA
        display: inline-block
        padding: 4px
        margin-top: 20px


.titleGoods
  with 100%
  height 96px
  display flex
  justify-content center
  align-items center
  font-size 28px
.tuijian_buy
  position: relative
  &:before, &:after
    content: ''
    position: absolute
    top:0
    bottom: 0
    width: 26px
    height 8px
    background-color: #000000
    transform: skewX(-45deg)
    margin: auto
  &:before
    left: 260px
  &:after
    right: 260px


.back
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: #F7F7F7
  z-index :-1