.container
  margin 0 24px
  padding-top 48px
  font-size 28px
  color rgba(52, 52, 52, 1)
.list
  display flex
.date
  margin-right 24px
.day
  height 67px
  font-size 60px
  font-weight bold
  color rgba(249, 72, 46, 1)
  line-height 67px
.month
  font-size 32px
  color rgba(51, 51, 51, 1)
  line-height 45px
  text-align right
.data
  position relative
  padding-bottom 28px
  margin-bottom 28px
.data::after
  content ''
  display block
  position absolute
  left 0
  bottom 0
  width 100%
  height 1PX
  background-image linear-gradient(0deg, #E1E1E1 50%, transparent)
.head
  display flex
  align-items center
.head_img
  width 88px
  height 88px
  border-radius 50%
  background #ccc
  margin-right 24px
.name
  font-size 32px
  color rgba(26, 26, 26, 1)
  line-height 45px
.time
  font-size 24px
  color rgba(102, 102, 102, 1)
  line-height 33px
  margin-top 10px
.sell
  margin 18px 0
.detail
  font-size 28px
  color #B2B2B2
.product
  display flex
.product_img
  width 178px
  height 178px
  border-radius 5px
  background #ccc
  margin-right 32px
.product_title
  font-size 28px
  color rgba(51, 51, 51, 1)
  line-height 40px
  height 40px
  width 100%
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.price
  display flex
  justify-content space-between
  position absolute
  bottom 0
  width 100%
.product_info
  position relative
  width calc(100% - 210px)
.price
  height 32px
  font-size 28px
  font-weight bold
  color rgba(179, 179, 179, 1)
  line-height 32px
.price_red
  height 47px
  font-size 40px
  font-weight bold
  color rgba(249, 72, 46, 1)
  line-height 47px
  margin-right 10px
.symbol
  font-size 28px
  font-weight bold
  color rgba(249, 72, 46, 1)
  display inline-block
  width 21px
.right
  width calc(100% - 87px)
.buy_btn
  width 115px
  height 44px
  background rgba(249, 72, 46, 1)
  border-radius 24px
  text-align center
  line-height 44px
  font-size 24px
  color rgba(255, 255, 255, 1)
  position absolute
  right 0
  bottom 0
.del
  text-decoration line-through