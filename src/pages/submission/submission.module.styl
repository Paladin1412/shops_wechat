page 
  background-color: rgba(247, 248, 250, 1)
  &:before
    display: none
.container
  padding: 24px 32px
  font-family: ' '
.addres_box
  color: #676767
  font-size: 28px
  text-align: center
  padding: 40px 0
  line-height: 28px
  background: #ffffff
  border-radius:12px; 
  .icon
    display: block
    margin-bottom: 16px
.product_box
  padding: 32px 24px
  background:rgba(255,255,255,1);
  border-radius:12px;
  margin-top: 24px
  .title
    font-size: 28px 
    line-height: 40px
    display: flex
    align-items: center
    color: rgba(50, 50, 50, 1)
    .font
      margin-left: 16px
    .icon_shop
      font-size: 26px
  .info_box
    display: flex
    margin-top: 24px
    .img
      width: 178px
      height 178px
      display: block
      margin-bottom: 0
      flex-shrink: 0
      border-radius:6px;
    .info_right
      margin-left: 24px
      flex: 1
      margin-top: 16px
      .item_line
        display: flex
        align-items: center
        justify-content: space-between
        font-size: 24px
        line-height: 24px
        .info_title
          width: 290px
          display: block
          color: rgba(51, 51, 51, 1)
        .num
          color: rgba(102, 102, 102, 1) 
        .recv
          background: #FEECEA
          color: #F9482E
          padding: 2px 10px
          display: inline-block
          margin-top: 24px
      .second
        color: rgba(201, 201, 201, 1)
        margin-top: 17px
      .all_price
        text-align: right
        display: flex
        align-items: center
        justify-content: flex-end
        font-size: 24px
        color: rgba(52, 52, 52, 1)
        margin-top: 42px
        .all_num
          font-weight: bold
          font-size: 28px
          margin-left: 10px
      .count_box
        flex: 1
        display: flex
        justify-content: flex-end
        margin-top: 20px


.transfee_box
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 28px
  line-height: 40px 
  .red
    margin-left: 10px



.gray
    color: rgba(201, 201, 201, 1)
    font-size: 24px
    line-height: 28px
.red
    color: #F9482E
    font-weight: bold
    font-size: 28px

.button_box
  position: fixed
  bottom: 0
  left: 0
  z-index: 99
  background: #fff
  width: 100%
  .content
    display: flex
    align-items: center
    justify-content: space-between
    padding: 13px 32px 80px 32px
    font-size: 28px
    .red
      font-size: 32px
    .gray
      font-size: 24px
      margin-left: 10px
    .button
      background:rgba(249,72,46,1);
      border-radius:36px;
      color: #ffffff
      font-size: 28px
      padding: 16px 32px
      line-height: 40px
      font-weight: 500
    .gray_button
      background: #dfdfdf
    


.item
  display: flex
  align-items: center
  margin: 0 28px
  font-size: 28px
  line-height: 28px
  background: #ffffff
  .left
    width: calc(100% - 40px)
    padding-right: 40px
    color: #333333
    .gray
      color: #333333
      margin-top: 20px
      display: block 
      line-height: 33px
      font-size: 24px
      text-align: left
    .name_box
      display: flex
      align-items: center
      line-height: 40px
      .name
        overflow: hidden;
        // text-overflow:ellipsis;
        // white-space: nowrap;
        // width: 350px
        display: inline-block
        text-align: left 
        font-weight: 500
      .tel
        margin-left: 20px
        font-weight: 600
:global
  .at-input-number, .at-input-number__input, .at-input-number input
    border-color: #dfdfdf
  .at-input-number__btn-subtract, .at-input-number__btn-add
    font-size: 20px
    line-height: 20px
    padding: 5px
  .at-input-number__btn:not(.at-input-number--disabled) 
    .at-input-number__btn-subtract, .at-input-number__btn-add
      color: rgba(102, 102, 102, 1)