.firInner
  width 686px
  margin 0 32px
  background: #ffffff
  border-radius: 12px
.liveText
  position absolute
  display flex
  align-items center
  height 36px
  left 18px
  background rgba(0, 0, 0, 0.2)
  border-radius 6px
  top 18px
.imgStyle
  width 20px
  height 16px
  margin 0 8px
.liveLeftText
  display flex
  height 36px
  line-height: 36px
  align-items center
  background linear-gradient(270deg, rgba(246, 52, 80, 1) 0%, rgba(249, 72, 46, 1) 100%)
  border-radius 8px
  color #fff
  padding 0 10px
.turnLeftText
  background:linear-gradient(270deg,rgba(52,99,246,1) 0%,rgba(107,46,249,1) 100%);
.preLeftText
  background:linear-gradient(270deg,rgba(52,207,246,1) 0%,rgba(46,163,249,1) 100%);
.turnList
  display:flex
  justify-content: space-between
  margin:20px 0
  flex-wrap: wrap
.turn_Data_List
  width:335px
  height:335px
  border-radius: 18px
  background:#ff6700
  position relative
  margin-bottom:20px
.fixed_style
  width:100%
  height:100%
  position absolute
  left:0
  top:0
  border-radius: 18px
  background:#cccccc
.fixed_style_img
  width:335px
  height:335px
  display: block
  border-radius: 18px
.bot_style
  padding:0 16px
  width:278px
  position absolute
  bottom:16px
  left:0
  color:#ffffff
.look_More
  color:#999999
  font-size: 28px
.turn_Data_Img
  display: flex
  background:linear-gradient(270deg,rgba(52,99,246,1) 0%,rgba(107,46,249,1) 100%);
  border-radius:8px;
  min-width: 60px
.lookNum_style
  color:#ffffff
  font-size: 22px
.lookShop_style
  color:#ffffff
  font-size: 24px
.look_more_style
  display: flex
  align-items: center
.icon_style
  font-size: 22px
  height: 26px
  color:#999999
  margin-left:16px
.scroll_content
  position: fixed!important
  width: 100%
  height :calc(100% - 20px)!important
  // height:500px!important
  left: 0
  // top: 200px
  margin-top: 10px
  z-index: 1